
<%= stylesheet_link_tag "registration" %>


<link href="https://fonts.googleapis.com/css?family=Barrio|Gloria+Hallelujah|Sofia" rel="stylesheet">

<div class='login'>
  <h2>Sign Up</h2>
  <!-- <img src="../assets/images/backpack.svg" id="logo"> -->
  <%= image_tag ('/images/backpack.png') %>
  <input first_name='first_name' placeholder='First Name' type='text'>
  <input last_name='Last Name' placeholder='Last Name' type='text'>
  <input name='email' placeholder='E-Mail Address' type='text'>
  <input id='pw' name='password' placeholder='Password' type='password'>
  <div class='agree'>
    <input id='agree' name='agree' type='checkbox'>
    <label for='agree'></label>Accept rules and conditions
  </div>
  <input class='animated' type='submit' value='Submit'>
</div>

