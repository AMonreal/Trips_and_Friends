

<%= stylesheet_link_tag "users" %>
<link href="https://fonts.googleapis.com/css?family=Barrio|Gloria+Hallelujah|Sofia" rel="stylesheet">


<div class="wrapper">
  <div class="profile-container">
    <div class="profile-content">
      <h1>Profile</h1>
        <div class="avatar-container">
          <div id="avatar" class="avatar">
          </div>
        </div>
        <div class="user_informations">
          <%= @user.first_name %>
          <%= @user.last_name %>
        </div>
          <%= link_to "My Friends", "/mettreroute", class: "linktofriends" %>
          <%= image_tag "group.svg", id: "logo2" %>
          <%= link_to "My Trips", "/mettreroute", class: "linktotrips" %>
          <%= image_tag "maps.svg", id: "logo1" %>
    </div>
  </div>
  <div class="map-container">
    <div style='width: 800px;'>
      <div id="multi_markers" style='width: 800px; height: 400px;'></div>
        <script>
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
        </script>
    </div>
  </div>
</div>
